# DXB Events Data Collection Pipeline - Environment Variables

# API Keys (REQUIRED)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
BROWSE_AI_API_KEY=your_browse_ai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Backend Integration (REQUIRED)
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=your_backend_api_key_here

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
DATABASE_NAME=dxb_events

# Collection Names
RAW_EVENTS_COLLECTION=raw_events
PROCESSED_EVENTS_COLLECTION=processed_events

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Scraping Configuration
SCRAPING_DELAY=2
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# AI Processing Configuration
MAX_DESCRIPTION_LENGTH=2000
MAX_EVENTS_PER_BATCH=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/data_collection.log

# Environment (development, staging, production)
ENVIRONMENT=development 